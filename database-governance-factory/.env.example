# Database Governance Factory Environment Configuration

# Application Settings
GOVERNANCE_ENVIRONMENT=development
GOVERNANCE_API_HOST=0.0.0.0
GOVERNANCE_API_PORT=8080
GOVERNANCE_API_TOKEN=your-secure-api-token-here
DEBUG_MODE=true

# CORS Settings
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080

# Database Connections
# MongoDB Atlas Free Tier
USER_MONGODB_CONNECTION_STRING=mongodb+srv://username:password@cluster.mongodb.net/user_management?retryWrites=true&w=majority
CONTENT_MONGODB_CONNECTION_STRING=mongodb+srv://username:password@cluster.mongodb.net/content_management?retryWrites=true&w=majority
WORKFLOW_MONGODB_CONNECTION_STRING=mongodb+srv://username:password@cluster.mongodb.net/workflow_engine?retryWrites=true&w=majority
API_GATEWAY_MONGODB_CONNECTION_STRING=mongodb+srv://username:password@cluster.mongodb.net/api_gateway?retryWrites=true&w=majority
ANALYTICS_MONGODB_CONNECTION_STRING=mongodb+srv://username:password@cluster.mongodb.net/analytics_service?retryWrites=true&w=majority
SECURITY_MONGODB_CONNECTION_STRING=mongodb+srv://username:password@cluster.mongodb.net/security_service?retryWrites=true&w=majority
NOTIFICATION_MONGODB_CONNECTION_STRING=mongodb+srv://username:password@cluster.mongodb.net/notification_service?retryWrites=true&w=majority
BACKUP_MONGODB_CONNECTION_STRING=mongodb+srv://username:password@cluster.mongodb.net/backup_service?retryWrites=true&w=majority

# Supabase PostgreSQL Free Tier
USER_SUPABASE_CONNECTION_STRING=postgresql://postgres:password@db.supabase.co:5432/postgres
CONTENT_POSTGRES_CONNECTION_STRING=postgresql://postgres:password@db.supabase.co:5432/postgres
WORKFLOW_POSTGRES_CONNECTION_STRING=postgresql://postgres:password@db.supabase.co:5432/postgres
AUDIT_SERVICE_POSTGRES_CONNECTION_STRING=postgresql://postgres:password@db.supabase.co:5432/postgres

# Redis Labs Free Tier
USER_REDIS_CONNECTION_STRING=redis://default:password@redis-cluster.cloud.redislabs.com:port/0
CONTENT_REDIS_CONNECTION_STRING=redis://default:password@redis-cluster.cloud.redislabs.com:port/1
WORKFLOW_REDIS_CONNECTION_STRING=redis://default:password@redis-cluster.cloud.redislabs.com:port/2

# Azure Cosmos DB Free Tier
PAYMENT_COSMOS_CONNECTION_STRING=AccountEndpoint=https://account.documents.azure.com:443/;AccountKey=key;

# Azure Blob Storage Free Tier
PAYMENT_BLOB_CONNECTION_STRING=DefaultEndpointsProtocol=https;AccountName=account;AccountKey=key;EndpointSuffix=core.windows.net
AUDIT_BLOB_CONNECTION_STRING=DefaultEndpointsProtocol=https;AccountName=account;AccountKey=key;EndpointSuffix=core.windows.net

# Local Development Database Passwords
GOVERNANCE_MONGODB_PASSWORD=governance-admin-pass
GOVERNANCE_POSTGRES_PASSWORD=governance-postgres-pass
GOVERNANCE_REDIS_PASSWORD=governance-redis-pass

# Monitoring Configuration
PROMETHEUS_ENABLED=true
JAEGER_ENABLED=true
GRAFANA_PASSWORD=governance-grafana-pass

# Backup Configuration
BACKUP_ENCRYPTION_PASSWORD=your-backup-encryption-password
BACKUP_RETENTION_DAYS=90

# P2P Backup Configuration
STORJ_ACCESS_KEY=your-storj-access-key
STORJ_SECRET_KEY=your-storj-secret-key
SIA_API_PASSWORD=sia-password

# Notification Settings
GOVERNANCE_ADMIN_EMAIL=admin@enterprise.com
GOVERNANCE_TEAM_EMAIL=governance-team@enterprise.com
EXECUTIVE_TEAM_EMAIL=executives@enterprise.com
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK
TEAMS_WEBHOOK_URL=https://outlook.office.com/webhook/YOUR/TEAMS/WEBHOOK

# Security Settings
JWT_SECRET_KEY=your-jwt-secret-key-here
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# Performance Settings
CONNECTION_POOL_SIZE=10
QUERY_TIMEOUT_SECONDS=30
CACHE_TTL_SECONDS=3600

# Compliance Settings
AUDIT_LOG_RETENTION_DAYS=2555  # 7 years for SOX compliance
DATA_RETENTION_POLICY_DAYS=365
ENCRYPTION_AT_REST=true
ENCRYPTION_IN_TRANSIT=true

# Development Settings
LOG_LEVEL=DEBUG
ENABLE_SWAGGER_UI=true
ENABLE_REDOC=true
RELOAD_ON_CHANGE=true
