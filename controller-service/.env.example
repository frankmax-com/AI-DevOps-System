# Controller Service Environment Configuration

# Azure Key Vault Configuration
AZURE_KEY_VAULT_URL=https://ai-devops-vault.vault.azure.net/
AZURE_CLIENT_ID=your-azure-client-id
AZURE_CLIENT_SECRET=your-azure-client-secret  
AZURE_TENANT_ID=your-azure-tenant-id

# Governance Factory URLs (Local Development)
GITHUB_GOVERNANCE_URL=http://localhost:8001
AZURE_GOVERNANCE_URL=http://localhost:8002
AI_PROVIDER_GOVERNANCE_URL=http://localhost:8003
DATABASE_GOVERNANCE_URL=http://localhost:8004

# Governance Factory API Keys (if required)
GITHUB_GOVERNANCE_API_KEY=optional-api-key
AZURE_GOVERNANCE_API_KEY=optional-api-key
AI_PROVIDER_GOVERNANCE_API_KEY=optional-api-key
DATABASE_GOVERNANCE_API_KEY=optional-api-key

# Controller Service Configuration
CONTROLLER_SERVICE_URL=http://localhost:8000
CONTROLLER_SERVICE_PORT=8000
JWT_SECRET_KEY=change-this-to-a-secure-random-key-minimum-32-characters
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=8

# Docker Configuration for Agent Spawning
DOCKER_HOST=unix:///var/run/docker.sock
AGENT_NETWORK_PREFIX=tenant
AGENT_REGISTRY=ai-devops
AGENT_IMAGE_TAG=latest

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE=logs/controller-service.log

# Database Configuration (if needed for local state)
DATABASE_URL=sqlite:///./controller-service.db

# Redis Configuration (for session management)
REDIS_URL=redis://localhost:6379/0

# Performance Configuration
MAX_CONCURRENT_AGENTS=50
MAX_AGENTS_PER_STARTUP=10
AGENT_SPAWNING_TIMEOUT=300
HEALTH_CHECK_INTERVAL=30

# Security Configuration
ENCRYPTION_KEY_ROTATION_DAYS=90
TOKEN_BLACKLIST_TTL_HOURS=24
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8080"]

# Monitoring Configuration
PROMETHEUS_METRICS_PORT=9090
JAEGER_AGENT_HOST=localhost
JAEGER_AGENT_PORT=6831

# Development Flags
DEBUG=true
ENABLE_SWAGGER=true
ENABLE_METRICS=true
ENABLE_TRACING=false
